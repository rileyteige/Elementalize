<Window x:Class="PeriodicName.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}"
        Height="350"
        Width="525"
        FocusManager.FocusedElement="{Binding ElementName=inputTextBox}">
    
    <Window.Resources>
        <ResourceDictionary Source="MainWindowResources.xaml" />
    </Window.Resources>
    
    <DockPanel>
        <TextBox DockPanel.Dock="Top"
                 x:Name="inputTextBox"
                 FontSize="18"
                 Text="{Binding Input, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        
        <ListBox Padding="0 2 0 0" ItemsSource="{Binding Elements}" ScrollViewer.VerticalScrollBarVisibility="Disabled" />
    </DockPanel>
</Window>
